<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/FirstFragment">

    <fragment
        android:id="@+id/FirstFragment"
        android:name="com.example.androidsampletest.ui.FirstFragment"
        android:label="@string/first_fragment_label"
        tools:layout="@layout/fragment_user">


        <action
            android:id="@+id/action_FirstFragment_to_SecondFragment"
            app:destination="@id/SecondFragment">
            <argument
                android:name="selected_id"
                android:defaultValue="1"
                app:argType="string" />
        </action>
    </fragment>
    <fragment
        android:id="@+id/SecondFragment"
        android:name="com.example.androidsampletest.ui.SecondFragment"
        android:label="@string/second_fragment_label"
        tools:layout="@layout/fragment_user">

        <action
            android:id="@+id/action_SecondFragment_to_FirstFragment"
            app:destination="@id/FirstFragment" />
        <action
            android:id="@+id/action_SecondFragment_to_ThirdFragment"
            app:destination="@id/ThirdFragment">

            <argument
                android:name="selected_album_id"
                app:argType="com.example.androidsampletest.network.responses.UserPhotosResponse" />

        </action>
    </fragment>


    <fragment
        android:id="@+id/ThirdFragment"
        android:name="com.example.androidsampletest.ui.ThirdFragment"
        android:label="@string/third_fragment_label"
        tools:layout="@layout/fragment_third">

        <action
            android:id="@+id/action_ThirdFragment_to_SecondFragment"
            app:destination="@id/SecondFragment" />
    </fragment>


</navigation>